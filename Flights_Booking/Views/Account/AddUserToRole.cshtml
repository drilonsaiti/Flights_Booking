@model Flights_Booking.Models.AddToRoleModel

@{
    ViewBag.Title = "AddUserToRole";
}

<h2>AddUserToRole</h2>
@using (Html.BeginForm("AddUserToRole", "Account"))
{
    <div class="form-group">
        @Html.LabelFor(z => z.Email)
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.DropDownListFor(m => m.SelectedRole, new SelectList(Model.Roles), new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-default">Save</button>
}
